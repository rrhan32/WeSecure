<link rel="stylesheet" href="css/cope.css">
<body>
    <section>
        <div class="child2">
            <form action="http://localhost:3000/create_account" class="shadow p-3 mb-5 bg-body" method="post">
                <div class="row">
                    <h1>Create New Account</h1>
                    <div class="col-12">
                        <label for="Name"></label>
                        <input type="text" placeholder="Enter Name" class="form-control" id="Name" name="name">
                    </div>
                    <div class="col-12">
                        <label for="email"></label>
                        <input type="email" placeholder="Enter Email" class="form-control" id="email" name="email">
                    </div>
                    <div class="col-12">
                        <label for="password"></label>
                        <input type="password" placeholder="Password" class="form-control" id="password" name="password">
                    </div>
                    <div class="col-12">
                        <label for="number"></label>
                        <input type="tel" placeholder="Enter Phone Number" class="form-control" id="number" name="phoneNumber">
                    </div>
                    <div class="col-12">
                        <br><button class="btn btn-primary form-control" type="submit">Sign Up</button>
                    </div>
                    <div class="col-12 text-center">
                        <br><a href="http://localhost:3000/forgot">Forgot Password?</a>
                    </div>
                </div>
            </form>
            
        </div>
    </section>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
